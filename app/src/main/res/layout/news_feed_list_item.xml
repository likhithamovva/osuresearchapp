<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_news_feed_item"
    android:elevation="@dimen/news_feed_text_padding"
    android:orientation="vertical"
    android:weightSum="5">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.3"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/news_feed_divider_height"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="3">


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingLeft="@dimen/news_feed_divider_height"
                android:paddingRight="@dimen/news_feed_divider_height"
                android:paddingTop="@dimen/news_feed_divider_height"
                android:text="OSU grad student wins Three Minute Thesis® after several attempts "
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/posted_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="start"
                android:paddingLeft="@dimen/news_feed_text_padding"
                android:text="2017-May-07"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="@dimen/news_feed_divider_height"
        android:text="Allison Campolo knows it pays to persevere. After competing in the preliminary rounds of the Oklahoma State University Graduate College Three Minute Thesis® four times, she recently made it to the finals and won, defeating 11 other competitors."
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>