<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:elevation="@dimen/news_feed_list_item_padding"
    android:orientation="horizontal"
    android:padding="@dimen/news_feed_list_item_padding"
    android:weightSum="4">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/contact_list_view_text_view_padding_left"
        android:layout_weight="1.3"
        android:background="@android:color/white"
        android:padding="@dimen/news_feed_divider_height"
        android:src="@mipmap/ic_calendar" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.7"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="@dimen/news_feed_divider_height"
        android:text="Calendar"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/colorCodeVPROffice" />
</LinearLayout>