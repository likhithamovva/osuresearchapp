<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <edu.okstate.osuresearch.Contact.EqualWidthHeightTextView
            android:id="@+id/event_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_text_view_drawable"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="@dimen/contact_list_view_margin">

        <TextView
            android:id="@+id/research_week_event_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9AM-10AM"
            android:textAlignment="textEnd"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/research_week_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Research Meetup"
            android:textAlignment="textStart"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/research_week_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HBRC Room 302"
            android:textAlignment="textStart"
            android:textAppearance="@android:style/TextAppearance.Small" />

    </LinearLayout>
</LinearLayout>