<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:weightSum="4">

    <TextView
        android:id="@+id/event_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/contact_list_view_padding"
        android:paddingRight="@dimen/contact_list_view_padding"

        android:paddingTop="@dimen/contact_list_view_padding"
        android:textAlignment="textEnd"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/event_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.6"
        android:autoLink="all"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/contact_list_view_padding"
        android:paddingTop="@dimen/contact_list_view_padding"
        android:text="jfa;slkjfdda;slkfjsdl;jf;ladjf;lajdf;asjf;lakjf;slakjf;sajf;slkdjfd;sakljf;aslkjf;alsdjkf;ladskjf;laskjf;sjdf;asldjklf"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/black" />
</LinearLayout>