<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <co.ceryle.radiorealbutton.RadioRealButtonGroup
        android:id="@+id/radioButtonGroup_selectSocial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rrbg_animateDrawables_enter="overshoot"
        app:rrbg_animateTexts_enter="overshoot"
        app:rrb_rippleColor="@color/colorCodeVPROffice"
        app:rrbg_dividerSize="1dp"
        app:rrbg_radius="10dp"
        app:rrbg_selectorColor="@color/colorCodeVPROffice"
        app:rrbg_selectorSize="6dp">

        <co.ceryle.radiorealbutton.RadioRealButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_drawableHeight="36dp"
            app:rrb_drawablePadding="8dp"
            app:rrb_drawableWidth="36dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/colorCodeVPROffice"
            app:rrb_text="@string/twitter"
            app:rrb_textColor="#000000"/>

        <!--<co.ceryle.radiorealbutton.RadioRealButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:rrb_drawableGravity="right"-->
            <!--app:rrb_drawableHeight="36dp"-->
            <!--app:rrb_drawablePadding="8dp"-->
            <!--app:rrb_drawableWidth="36dp"-->
            <!--app:rrb_ripple="true"-->
            <!--app:rrb_rippleColor="@color/colorCodeVPROffice"-->
            <!--app:rrb_text="@string/facebook"-->
            <!--app:rrb_textColor="#000000"/>-->
    </co.ceryle.radiorealbutton.RadioRealButtonGroup>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/androidlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#e1e8ed"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>