<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:layout_weight="5"
    android:elevation="@dimen/news_feed_text_padding"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/contact_list_view_text_view_padding_left"
    android:paddingRight="@dimen/contact_list_view_text_view_padding_left"
    android:paddingTop="@dimen/contact_list_view_text_view_padding_left">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/tw__solid_white"
        android:gravity="center">

        <edu.okstate.osuresearch.Contact.EqualWidthHeightTextView
            android:id="@+id/department_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_text_view_drawable"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/black" />
        <!-- <View
             android:id="@+id/department_color"
             android:layout_width="15dp"
             android:layout_height="15dp"
             />
             -->
    </LinearLayout>

    <TextView
        android:id="@+id/department_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4"
        android:background="@color/tw__solid_white"
        android:gravity="center"
        android:paddingTop="@dimen/news_feed_list_item_padding"
        android:text="VPR Office Signature Events"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textStyle="bold" />

</LinearLayout>